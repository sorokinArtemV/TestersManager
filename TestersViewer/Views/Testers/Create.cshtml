@{
    ViewBag.Title = "Create Tester";
}

<a href="~/testers/index" class="button button--violet">Back to all Testers</a>
<h2>Create Tester</h2>

<div class="">
    <form action="~/testers/create" class="form-create" method="post">

        @* Name *@
        <div class="">
            <label for="TesterName">Name</label>
        </div>
        <div class="">
            <input type="text" id="TesterName">
        </div>

        @* Email *@
        <div class="">
            <label for="Email">Email</label>
        </div>
        <div class="">
            <input type="email" id="Email">
        </div>

        @* BirthDate *@
        <div class="">
            <label for="BirthDate">Birth date</label>
        </div>
        <div class="">
            <input type="date" id="BirthDate">
        </div>

        @* Gender *@
        <div class="">
            <label for="Gender">Gender</label>
        </div>
        <div class="">
            <input type="radio" id="Male" name="Gender" value="Male">
            <label for="Male">Male</label>
            <input type="radio" id="Female" name="Gender" value="Female">
            <label for="Female">Female</label>
            <input type="radio" id="Other" name="Gender" value="Other">
            <label for="Other">Other</label>
        </div>

        @* DevStream *@
        <div class="">
            <div class="">
                <label for="DevStreamId">Stream</label>
            </div>
            <div class="">
                <select name="DevStreamId" id="DevStreamId">
                    <option value="">Select stream</option>
                    @foreach (DevStreamResponse stream in ViewBag.DevStreams)
                    {
                        <option value="@stream.DevStreamId">@stream.DevStreamName</option>
                    }
                </select>
            </div>
        </div>

        @* Position *@
        <div class="">
            <label for="Position">Position</label>
        </div>
        <div class="">
            <input type="text" id="Position">
        </div>

        @* Skills *@
        <div class="">
            <label for="Skills">Skills</label>
        </div>
        <div class="">
            <input type="text" id="Skills">
        </div>

        @* Months of work experience *@
        <div class="">
            <label for="MonthsOfWorkExperience">Months of work experience</label>
        </div>
        <div class="">
            <input type="number" id="MonthsOfWorkExperience">
        </div>

        <button class="form-create__btn" name="Email">Submit</button>
    </form>

</div>